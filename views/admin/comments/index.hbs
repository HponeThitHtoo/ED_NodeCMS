<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>owner</th>
      <th>Approve</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{user.firstName}}</td>
      <td><input type="checkbox" data-id="{{id}}" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
      <td>{{generateDate date 'MMMM Do YYYY'}}</td> {{!-- helperFunctionName, 1st param, 2nd param --}}
      <td>
        <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>